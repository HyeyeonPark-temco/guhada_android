<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/layout_appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_default"
            android:fitsSystemWindows="true"
            app:elevation="0dp">

            <!-- HEADER -->
            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentInsetEnd="0dp"
                app:contentInsetLeft="0dp"
                app:contentInsetRight="0dp"
                app:contentInsetStart="0dp"
                app:layout_scrollFlags="scroll|enterAlways">

                <include
                    android:id="@+id/layout_header"
                    layout="@layout/header_main_home" />
            </androidx.appcompat.widget.Toolbar>

            <!-- CATEGORY -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_header">

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/layout_tab"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipToPadding="false"
                    android:overScrollMode="never"
                    app:tabContentStart="0dp"
                    app:tabIndicator="@null"
                    app:tabIndicatorHeight="0dp"
                    app:tabMinWidth="0dp"
                    app:tabMode="scrollable"
                    app:tabPaddingBottom="0dp"
                    app:tabPaddingEnd="10dp"
                    app:tabPaddingStart="10dp"
                    app:tabPaddingTop="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toBottomOf="@+id/view_line"
                    />
                <View
                    android:id="@+id/view_line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/white_three"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/layout_tab"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <!-- DUMMY -->
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:overScrollMode="never">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <io.temco.guhada.view.custom.layout.HeightRelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/main_01"
                        app:height="384dp"
                        app:width="360dp" />

                    <io.temco.guhada.view.custom.layout.HeightRelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/featured_item_02"
                        app:height="1317dp"
                        app:width="360dp" />

                    <io.temco.guhada.view.custom.layout.HeightRelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/plusitem03"
                        app:height="1317dp"
                        app:width="360dp" />

                    <io.temco.guhada.view.custom.layout.HeightRelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/focuson04"
                        app:height="556dp"
                        app:width="360dp" />

                    <io.temco.guhada.view.custom.layout.HeightRelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/hotkeyword05"
                        app:height="341dp"
                        app:width="360dp" />

                    <io.temco.guhada.view.custom.layout.HeightRelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bestitem07"
                        app:height="1260dp"
                        app:width="360dp" />

                    <io.temco.guhada.view.custom.layout.HeightRelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/best_store06"
                        app:height="1054dp"
                        app:width="360dp" />

                    <io.temco.guhada.view.custom.layout.HeightRelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/foryou_08"
                        app:height="858dp"
                        app:width="360dp" />

                    <io.temco.guhada.view.custom.layout.HeightRelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/banner09"
                        app:height="230dp"
                        app:width="360dp" />

                    <io.temco.guhada.view.custom.layout.HeightRelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/specialsale_10"
                        app:height="936dp"
                        app:width="360dp" />

                    <io.temco.guhada.view.custom.layout.HeightRelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/mdpick_11"
                        app:height="1833dp"
                        app:width="360dp" />

                    <io.temco.guhada.view.custom.layout.HeightRelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/newin_12"
                        app:height="1286dp"
                        app:width="360dp" />

                    <io.temco.guhada.view.custom.layout.HeightRelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/banner_13"
                        app:height="120dp"
                        app:width="360dp" />

                    <io.temco.guhada.view.custom.layout.HeightRelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/specialsale_14"
                        app:height="928dp"
                        app:width="360dp" />

                    <io.temco.guhada.view.custom.layout.HeightRelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/banner_15"
                        app:height="120dp"
                        app:width="360dp" />
                    <!-- INFORMATION -->
                    <include
                        android:id="@+id/layout_information"
                        layout="@layout/layout_information" />
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </RelativeLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>

