<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="clickTabListener"
            type="android.view.View.OnClickListener" />
        <import type="android.view.View" />
        <variable name="isViewMore" type="java.lang.Boolean" />
        <variable
            name="viewModel"
            type="io.temco.guhada.data.viewmodel.main.HomeListViewModel" />
    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="32dp">

        <TextView
            android:id="@+id/title"
            style="@style/TextBold"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_marginBottom="32dp"
            android:gravity="center_horizontal"
            android:textColor="@color/text_3"
            android:textSize="@dimen/text_20" />

        <LinearLayout
            android:id="@+id/subtitle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_header"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/tab_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:onClick="@{clickTabListener}"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="4dp"
                android:paddingBottom="14dp"
                android:tag="0"
                android:orientation="vertical">

                <!-- DOT -->
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="10dp">

                    <ImageView
                        android:id="@+id/tab_img_0"
                        android:layout_width="4dp"
                        android:layout_height="4dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/drawable_round_corner_5"
                        android:background="@drawable/selector_tab_dot_category2" />
                </RelativeLayout>

                <!-- TITLE -->
                <TextView
                    android:id="@+id/tab_title_0"
                    style="@style/TextMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:textColor="@drawable/selector_text_category2"
                    android:text="@string/mainlistsubtitle_all"
                    android:textSize="@dimen/text_15" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="14dp" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/tab_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:onClick="@{clickTabListener}"
                android:layout_marginRight="12dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="4dp"
                android:paddingBottom="14dp"
                android:tag="1"
                android:orientation="vertical">

                <!-- DOT -->
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="10dp">

                    <ImageView
                        android:id="@+id/tab_img_1"
                        android:layout_width="4dp"
                        android:layout_height="4dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/drawable_round_corner_5"
                        android:background="@drawable/selector_tab_dot_category2" />
                </RelativeLayout>

                <!-- TITLE -->
                <TextView
                    android:id="@+id/tab_title_1"
                    style="@style/TextMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:textColor="@drawable/selector_text_category2"
                    android:text="@string/mainlistsubtitle_women"
                    android:textSize="@dimen/text_15" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="14dp" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/tab_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:onClick="@{clickTabListener}"
                android:layout_marginRight="12dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="4dp"
                android:paddingBottom="14dp"
                android:tag="2"
                android:orientation="vertical">

                <!-- DOT -->
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="10dp">

                    <ImageView
                        android:id="@+id/tab_img_2"
                        android:layout_width="4dp"
                        android:layout_height="4dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/drawable_round_corner_5"
                        android:background="@drawable/selector_tab_dot_category2" />
                </RelativeLayout>

                <!-- TITLE -->
                <TextView
                    android:id="@+id/tab_title_2"
                    style="@style/TextMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:textColor="@drawable/selector_text_category2"
                    android:text="@string/mainlistsubtitle_men"
                    android:textSize="@dimen/text_15" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="14dp" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/tab_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:onClick="@{clickTabListener}"
                android:layout_marginRight="12dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="4dp"
                android:paddingBottom="14dp"
                android:tag="3"
                android:orientation="vertical">

                <!-- DOT -->
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="10dp">

                    <ImageView
                        android:id="@+id/tab_img_3"
                        android:layout_width="4dp"
                        android:layout_height="4dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/drawable_round_corner_5"
                        android:background="@drawable/selector_tab_dot_category2" />
                </RelativeLayout>

                <!-- TITLE -->
                <TextView
                    android:id="@+id/tab_title_3"
                    style="@style/TextMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:textColor="@drawable/selector_text_category2"
                    android:text="@string/mainlistsubtitle_kids"
                    android:textSize="@dimen/text_15" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="14dp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</layout>