<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/background_default</item>
        <item name="toolbarStyle">@style/DefaultToolBarStyle</item>
        <item name="imageButtonStyle">@style/DefaultImageButtonStyle</item>
        <item name="android:scrollViewStyle">@style/ScrollViewStyle</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <!-- TEXTVIEW -->
    <style name="TextRegular">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextBold">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextThin">
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>

    <style name="TextMedium">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextLight">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="TextBlack">
        <item name="android:fontFamily">sans-serif-black</item>
    </style>

    <style name="TextRegularSingleLine" parent="TextRegular">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TextMediumSingleLine" parent="TextMedium">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TextTabStyle" parent="TextMedium">
        <item name="android:textSize">@dimen/text_10</item>
        <item name="android:textColor">@drawable/selector_text_tab_main</item>
    </style>

    <!-- DIALOG -->
    <style name="Dialog" parent="Theme.Design.Light">
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.8</item>
        <item name="android:windowEnterAnimation">@anim/dialog_slide_up</item>
        <item name="android:windowExitAnimation">@anim/dialog_slide_down</item>
    </style>

    <style name="DialogAnimation" >
        <item name="android:windowEnterAnimation">@anim/dialog_slide_up</item>
        <item name="android:windowExitAnimation">@anim/dialog_slide_down</item>
    </style>

    <!-- -->
    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <!-- -->
    <style name="DefaultToolBarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">0dp</item>
    </style>

    <style name="DefaultImageButtonStyle" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="ActivatedButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/common_white</item>
        <item name="android:textSize">@dimen/text_14</item>
        <item name="android:height">50dp</item>
    </style>

    <style name="InactivatedButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@color/silver</item>
        <item name="android:textColor">@color/common_white</item>
        <item name="android:textSize">@dimen/text_14</item>
        <item name="android:height">50dp</item>
    </style>

    <style name="InactivatedButtonBorderStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/border_all_silver</item>
        <item name="android:textColor">@color/common_white</item>
        <item name="android:textSize">@dimen/text_14</item>
        <item name="android:height">50dp</item>
    </style>

    <style name="ScrollViewStyle" parent="@android:style/Widget.DeviceDefault.Light.ScrollView">
        <item name="android:overScrollMode">never</item>
        <item name="android:scrollbars">none</item>
    </style>

    <style name="TabLayoutStyle" parent="android:Widget">
        <item name="tabBackground">@drawable/selector_tab_all</item>
        <item name="tabIndicatorColor">@android:color/transparent</item>
        <item name="tabIndicatorHeight">0dp</item>
    </style>

    <style name="HeaderTextStyle">
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:textColor">@color/black_two</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>
    
    <style name="ProductDetailContentTextStyle">
        <item name="android:textSize">@dimen/text_13</item>
        <item name="android:textColor">@color/black_four</item>
        <item name="android:fontFamily">@style/TextMedium</item>
    </style>

    <style name="ProductDetailTitleTextStyle">
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:textColor">@color/greyish_brown_two</item>
        <item name="android:fontFamily">@style/TextBold</item>
    </style>

    <style name="ReviewRatingStyle" parent="Widget.AppCompat.RatingBar">
        <item name="android:progressDrawable">@drawable/selector_ratingbar</item>
        <item name="android:maxHeight">15dp</item>
    </style>

    <style name="SpinnerItemStyle" parent="Widget.AppCompat.TextView.SpinnerItem" />

    <style name="SpinnerDropDownItemStyle" parent="TextAppearance.AppCompat.Widget.TextView.SpinnerItem" />
</resources>
