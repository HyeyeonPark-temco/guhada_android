<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="io.temco.guhada.data.viewmodel.mypage.MyPageDeliveryDetailViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintlayout_deliverydetail_productinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/common_white"
        android:paddingLeft="20dp"
        android:paddingTop="30dp"
        android:paddingRight="20dp"
        android:paddingBottom="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintlayout_deliverydetail_orderinfo">

        <ImageView
            android:id="@+id/imageview_deliverydetail_profile"
            android:layout_width="90dp"
            android:layout_height="120dp"
            android:layout_marginBottom="20dp"
            android:background="@color/common_white"
            app:imageUrl="@{viewModel.purchaseOrderResponse.orderList[0].imageUrl}"
            app:layout_constraintBottom_toTopOf="@id/textivew_deliverydetail_description"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textview_deliverydetail_brandname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:text="@{viewModel.purchaseOrderResponse.orderList[0].brandName}"
            android:textColor="@color/black_four"
            android:textSize="@dimen/text_13"
            app:layout_constraintLeft_toRightOf="@id/imageview_deliverydetail_profile"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textview_deliverydetail_productname"
            style="@style/TextRegularSingleLine"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="25dp"
            android:ellipsize="end"
            android:gravity="start"
            android:singleLine="true"
            android:text="@{viewModel.purchaseOrderResponse.orderList[0].season + ` ` + viewModel.purchaseOrderResponse.orderList[0].productName}"
            android:textColor="@color/black_four"
            android:textSize="@dimen/text_13"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintLeft_toRightOf="@+id/imageview_deliverydetail_profile"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textview_deliverydetail_brandname" />


        <TextView
            android:id="@+id/textview_deliverydetail_option"
            style="@style/TextRegularSingleLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="3dp"
            android:text="@{viewModel.purchaseOrderResponse.orderList[0].getOptionStr()}"
            android:textColor="@color/warm_grey"
            android:textSize="@dimen/text_13"
            app:layout_constraintLeft_toRightOf="@id/imageview_deliverydetail_profile"
            app:layout_constraintTop_toBottomOf="@+id/textview_deliverydetail_productname" />

        <TextView
            android:id="@+id/textview_deliverydetail_price"
            style="@style/TextBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="6dp"
            android:text="@{@string/mypage_price_format(viewModel.purchaseOrderResponse.orderList[0].discountPrice)}"
            android:textColor="@color/black_four"
            android:textSize="@dimen/text_14"
            app:layout_constraintLeft_toRightOf="@id/imageview_deliverydetail_profile"
            app:layout_constraintTop_toBottomOf="@+id/textview_deliverydetail_option" />

        <TextView
            android:id="@+id/textview_deliverydetail_status"
            style="@style/TextRegularSingleLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="20dp"
            android:text="@{viewModel.purchaseOrderResponse.orderList[0].purchaseStatusText}"
            android:textColor="@color/common_blue_purple"
            android:textSize="@dimen/text_14"
            app:layout_constraintBottom_toTopOf="@+id/textivew_deliverydetail_description"
            app:layout_constraintLeft_toRightOf="@id/imageview_deliverydetail_profile"
            app:layout_constraintTop_toBottomOf="@id/textview_deliverydetail_price"
            app:layout_constraintVertical_bias="0" />

        <TextView
            android:id="@+id/textivew_deliverydetail_description"
            style="@style/TextMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:singleLine="false"
            android:text="판매자가 상품을 준비중입니다. 곧 상품을 발송할 예정입니다."
            android:textColor="@color/warm_grey"
            android:textSize="@dimen/text_12"
            app:layout_constraintBottom_toTopOf="@id/button_deliverydetail_claim"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <Button
            android:id="@+id/button_deliverydetail_claim"
            style="@style/MypageDeliveryButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/pale_grey"
            android:onClick="@{()->viewModel.onClickClaim()}"
            android:text="@string/mypage_delivery_button_claim_empty"
            android:textColor="@color/black_four"
            android:textSize="@dimen/text_13"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>