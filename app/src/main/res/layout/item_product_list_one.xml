<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="130dp"
            android:layout_height="164dp">

            <!-- THUMBNAIL -->
            <ImageView
                android:id="@+id/image_thumb"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/common_black"
                android:scaleType="centerCrop" />

            <!-- COLOR -->
            <LinearLayout
                android:id="@+id/layout_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:gravity="bottom"
                android:orientation="horizontal"
                android:padding="1dp" />
        </RelativeLayout>

        <!-- INFO -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:gravity="bottom"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- BRAND -->
                <TextView
                    android:id="@+id/text_brand"
                    style="@style/TextBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_3"
                    android:textSize="@dimen/text_14" />

                <!-- SEASON -->
                <TextView
                    android:id="@+id/text_season"
                    style="@style/TextRegular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_weight="0"
                    android:textColor="@color/text_3"
                    android:textSize="@dimen/text_11" />
            </LinearLayout>

            <!-- TITLE -->
            <TextView
                android:id="@+id/text_title"
                style="@style/TextRegular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:textColor="@color/text_3"
                android:textSize="@dimen/text_12" />

            <!-- SIZE -->
            <TextView
                android:id="@+id/text_size"
                style="@style/TextRegular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:textColor="@color/text_3"
                android:textSize="@dimen/text_9" />

            <!-- PRICE -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="bottom"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_price"
                    style="@style/TextBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_3"
                    android:textSize="@dimen/text_16" />

                <TextView
                    android:id="@+id/text_price_sale_per"
                    style="@style/TextBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:textColor="@color/common_blue_purple"
                    android:textSize="@dimen/text_15" />
            </LinearLayout>

            <!-- SHIP -->
            <TextView
                android:id="@+id/text_ship_free"
                style="@style/TextMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@color/common_blue_purple"
                android:padding="4dp"
                android:text="@string/product_ship_free"
                android:textColor="@color/common_white"
                android:textSize="@dimen/text_8" />
        </LinearLayout>
    </LinearLayout>
</layout>