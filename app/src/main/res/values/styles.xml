<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/background_default</item>
        <item name="toolbarStyle">@style/DefaultToolBarStyle</item>
        <item name="imageButtonStyle">@style/DefaultImageButtonStyle</item>
        <item name="android:scrollViewStyle">@style/ScrollViewStyle</item>
        <item name="android:statusBarColor">@color/common_black</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="Theme.Transparent" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>


    <style name="Theme.Transparent2" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <!-- Dialog -->
    <style name="NoTitleBarDialog" parent="Theme.AppCompat.Dialog">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="imageButtonStyle">@style/DefaultImageButtonStyle</item>
    </style>

    <style name="CalendarDialogTheme" parent="android:Theme.Material.Light.Dialog">
        <item name="colorAccent">@color/common_blue_purple</item>
        <item name="android:colorAccent">@color/common_blue_purple</item>
        <item name="android:colorPrimaryDark">@color/common_blue_purple</item>
        <item name="android:colorPrimary">@color/common_blue_purple</item>
    </style>

    <!-- TEXTVIEW -->
    <style name="TextRegular">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextBold">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextThin">
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextMedium">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextLight">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextBlack">
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextRegularSingleLine" parent="TextRegular">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextMediumSingleLine" parent="TextMedium">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextBoldSingleLine" parent="TextBold">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextTabStyle" parent="TextMedium">
        <item name="android:textSize">@dimen/text_10</item>
        <item name="android:textColor">@drawable/selector_text_tab_main</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextTabStyleNonSelect" parent="TextMedium">
        <item name="android:textSize">@dimen/text_10</item>
        <item name="android:textColor">@color/text_1</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- DIALOG -->
    <style name="Dialog" parent="Theme.Design.Light">
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.8</item>
        <item name="android:windowEnterAnimation">@anim/dialog_slide_up</item>
        <item name="android:windowExitAnimation">@anim/dialog_slide_down</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_slide_up</item>
        <item name="android:windowExitAnimation">@anim/dialog_slide_down</item>
    </style>

    <!-- -->
    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <!-- -->
    <style name="DefaultToolBarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">0dp</item>
    </style>

    <style name="DefaultImageButtonStyle" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="ActivatedButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/common_white</item>
        <item name="android:textSize">@dimen/text_14</item>
        <item name="android:height">50dp</item>
    </style>

    <style name="InactivatedButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@color/silver</item>
        <item name="android:textColor">@color/common_white</item>
        <item name="android:textSize">@dimen/text_14</item>
        <item name="android:height">50dp</item>
    </style>

    <style name="InactivatedButtonBorderStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/border_all_silver</item>
        <item name="android:textColor">@color/common_white</item>
        <item name="android:textSize">@dimen/text_14</item>
        <item name="android:height">50dp</item>
    </style>

    <style name="ScrollViewStyle" parent="@android:style/Widget.DeviceDefault.Light.ScrollView">
        <item name="android:overScrollMode">never</item>
        <item name="android:scrollbars">none</item>
    </style>

    <style name="TabLayoutStyle" parent="android:Widget">
        <item name="tabBackground">@drawable/selector_tab_all</item>
        <item name="tabIndicatorColor">@android:color/transparent</item>
        <item name="tabIndicatorHeight">0dp</item>
    </style>

    <style name="TabLayoutPurpleIndicatorStyle" parent="android:Widget">
        <item name="tabBackground">@drawable/selector_tab_purpleindicator</item>
        <item name="tabIndicatorColor">@android:color/transparent</item>
        <item name="tabIndicatorHeight">0dp</item>
    </style>

    <style name="TabLayoutGreyStyle" parent="android:Widget">
        <item name="tabBackground">@drawable/selector_tab_productdetail_claim</item>
        <item name="tabIndicatorAnimationDuration">0</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabRippleColor">@android:color/transparent</item>
        <item name="tabTextColor">@color/black_four</item>
    </style>

    <style name="HeaderTextStyle">
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:textColor">@color/black_four</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="SpinnerItemStyle" parent="Widget.AppCompat.TextView.SpinnerItem" />

    <style name="SpinnerDropDownItemStyle" parent="TextAppearance.AppCompat.Widget.TextView.SpinnerItem" />

    <!-- Product Detail -->
    <style name="ProductDetailContentBlackTextStyle" parent="@style/TextMedium">
        <item name="android:textSize">@dimen/text_13</item>
        <item name="android:textColor">@color/black_four</item>
    </style>

    <style name="ProductDetailTitleBlackTextStyle" parent="@style/TextBold">
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:textColor">@color/black_four</item>
    </style>

    <style name="ProductDetailContentDarkGreyTextStyle" parent="@style/TextMedium">
        <item name="android:textSize">@dimen/text_12</item>
        <item name="android:textColor">@color/greyish_brown_two</item>
    </style>

    <style name="ProductDetailContentGreyTextStyle" parent="@style/TextRegular">
        <item name="android:textSize">@dimen/text_12</item>
        <item name="android:textColor">@color/warm_grey_two</item>
    </style>

    <style name="ProductDetailButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/common_white</item>
        <item name="android:textSize">@dimen/text_14</item>
        <item name="android:height">44dp</item>
    </style>

    <style name="WriteClaimButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/common_white</item>
        <item name="android:textSize">@dimen/text_18</item>
        <item name="android:height">60dp</item>
        <item name="android:width">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="ReviewRatingStyle" parent="Widget.AppCompat.RatingBar">
        <item name="android:progressDrawable">@drawable/selector_ratingbar_review</item>
    </style>

    <style name="ReviewRatingBigStyle" parent="Widget.AppCompat.RatingBar">
        <item name="android:progressDrawable">@drawable/selector_ratingbarbig_review</item>
    </style>

    <!-- Payment -->
    <style name="PaymentTitleBlackTextStyle" parent="@style/TextBold">
        <item name="android:textSize">@dimen/text_15</item>
        <item name="android:textColor">@color/black_four</item>
    </style>

    <style name="PaymentContentBlackTextStyle" parent="@style/TextMedium">
        <item name="android:textSize">@dimen/text_13</item>
        <item name="android:textColor">@color/black_four</item>
    </style>

    <style name="PaymentContentGreyTextStyle" parent="@style/TextMedium">
        <item name="android:textSize">@dimen/text_13</item>
        <item name="android:textColor">@color/warm_grey_two</item>
    </style>

    <style name="PaymentContentDarkGreyTextStyle" parent="@style/TextMedium">
        <item name="android:textSize">@dimen/text_13</item>
        <item name="android:textColor">@color/greyish_brown_two</item>
    </style>

    <style name="PaymentSubmitButton" parent="@style/WriteClaimButtonStyle">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="PaymentResultContentBlackTextStyle" parent="@style/TextMedium">
        <item name="android:textSize">@dimen/text_14</item>
        <item name="android:textColor">@color/black_four</item>
    </style>

    <style name="PaymentResultContentGreyTextStyle" parent="@style/TextMedium">
        <item name="android:textSize">@dimen/text_14</item>
        <item name="android:textColor">@color/warm_grey_two</item>
    </style>

    <style name="MainHomeListProductItemSellerRateTextStyle" parent="@style/TextBold">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:textColor">@color/text_3</item>
        <item name="android:textSize">@dimen/text_8</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/round_backgroud</item>
    </style>

    <style name="MainHomeListProductItemSellerNameTextStyle" parent="@style/TextThin">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:textColor">@color/greyish_brown_two</item>
        <item name="android:textSize">@dimen/text_10</item>
        <item name="android:layout_marginLeft">6dp</item>
    </style>

    <style name="ProductImageType">
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="borderlessStyle" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:scaleType">fitCenter</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <!-- Mypage -->
    <style name="MypageDeliveryButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@color/pale_grey</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="MypageDeliveryReceiptButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/border_all_silver</item>
        <item name="android:textColor">@color/black_four</item>
        <item name="android:textSize">@dimen/text_13</item>
    </style>

    <style name="MypageDeliveryBlackTextStyle" parent="@style/TextRegular">
        <item name="android:textColor">@color/black_four</item>
        <item name="android:textSize">@dimen/text_13</item>
    </style>

    <style name="MypageDeliveryBlackTitleTextStyle" parent="@style/TextBold">
        <item name="android:textColor">@color/black_four</item>
        <item name="android:textSize">@dimen/text_16</item>
    </style>

    <style name="MypageDeliveryBlackSubTitleTextStyle" parent="@style/TextMedium">
        <item name="android:textColor">@color/black_four</item>
        <item name="android:textSize">@dimen/text_14</item>
    </style>

    <style name="MypageDeliveryBlackBoldTextStyle" parent="@style/TextBold">
        <item name="android:textColor">@color/black_four</item>
        <item name="android:textSize">@dimen/text_14</item>
    </style>


    <style name="MypageDeliveryRedTitleTextStyle" parent="@style/TextBold">
        <item name="android:textColor">@color/brick</item>
        <item name="android:textSize">@dimen/text_14</item>
    </style>

    <style name="MypageDeliveryGreyishBrownTextStyle" parent="@style/TextRegular">
        <item name="android:textColor">@color/greyish_brown</item>
        <item name="android:textSize">@dimen/text_13</item>
    </style>

    <style name="MypageDeliveryWarmGreyTextStyle" parent="@style/TextRegular">
        <item name="android:textColor">@color/warm_grey</item>
        <item name="android:textSize">@dimen/text_13</item>
    </style>

    <style name="RequestOrderStatusBlackSubTitleTextStyle" parent="@style/TextBold">
        <item name="android:textColor">@color/black_four</item>
        <item name="android:textSize">@dimen/text_15</item>
    </style>

    <style name="RequestOrderStatusBlackTextStyle" parent="@style/TextMedium">
        <item name="android:textColor">@color/black_four</item>
        <item name="android:textSize">@dimen/text_14</item>
    </style>

    <style name="RequestOrderStatusWarmGreyTextStyle" parent="@style/TextMedium">
        <item name="android:textColor">@color/warm_grey</item>
        <item name="android:textSize">@dimen/text_14</item>
    </style>

    <style name="CommonMoreTextViewStyle" parent="@style/TextMedium">
        <item name="android:textColor">@color/black_four</item>
        <item name="android:textSize">@dimen/text_14</item>
    </style>

    <style name="CommonEmptyTextViewStyle" parent="@style/TextMedium">
        <item name="android:textColor">@color/black_four</item>
        <item name="android:textSize">@dimen/text_13</item>
    </style>

    <style name="ConfirmPurchaseTitleTextStyle" parent="@style/TextBold">
        <item name="android:textColor">@color/black_four</item>
        <item name="android:textSize">@dimen/text_21</item>
    </style>

    <style name="ConfirmPurchaseSubTitleTextStyle" parent="@style/TextRegular">
        <item name="android:textColor">@color/black_four</item>
        <item name="android:textSize">@dimen/text_13</item>
    </style>

    <style name="ConfirmPurchaseDescriptionTextStyle" parent="@style/TextRegular">
        <item name="android:textColor">@color/warm_grey</item>
        <item name="android:textSize">@dimen/text_12</item>
    </style>

    <style name="ConfirmPurchasePointTextStyle" parent="@style/TextMedium">
        <item name="android:textColor">@color/common_blue_purple</item>
        <item name="android:textSize">@dimen/text_12</item>
    </style>

    <style name="ConfirmPurchaseButtonStyle" parent="@style/borderlessStyle">
        <item name="android:textColor">@color/common_white</item>
        <item name="android:textSize">@dimen/text_13</item>
        <item name="android:layout_height">45dp</item>
    </style>


</resources>
