<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="clickListener"
            type="android.view.View.OnClickListener" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- TOP MENU -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_header"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- LEFT -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image_side_menu"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/top_btn_menu"
                    android:onClick="@{clickListener}" />

                <RelativeLayout
                    android:layout_width="110dp"
                    android:layout_height="30dp">

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="22dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/logo_guhada" />
                </RelativeLayout>
            </LinearLayout>

            <!-- RIGHT -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image_search"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/top_btn_search"
                    android:onClick="@{clickListener}" />

                <ImageView
                    android:id="@+id/image_shop_cart"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/top_btn_bag"
                    android:onClick="@{clickListener}" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</layout>