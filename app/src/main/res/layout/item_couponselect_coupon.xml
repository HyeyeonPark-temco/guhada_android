<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="couponWallet"
            type="io.temco.guhada.data.model.coupon.CouponInfo.BenefitOrderProductCouponResponse" />

        <variable
            name="viewModel"
            type="io.temco.guhada.data.viewmodel.CouponSelectDialogViewModel" />

        <variable
            name="dealId"
            type="Long" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageview_couponselect_coupon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/radio_select"
            android:clickable="true"
            android:focusable="true"
            app:selectedCouponNumber="@{couponWallet.couponNumber}"
            app:selectedCouponMap="@{viewModel.mSelectedCouponInfo}"
            app:selectedDealId="@{dealId}"
            app:vmCouponNumber="@{viewModel.mSelectedCoupon.couponNumber}"
            app:vmDealId="@{viewModel.mSelectedDealId}" />

        <!--android:clickable="@{couponWallet.couponId > 0 &amp;&amp; viewModel.mSelectedCoupon.couponId == couponWallet.couponId ? false : true, default = true}"-->
        <TextView
            android:id="@+id/textview_couponselect_couponname"
            style="@style/TextRegularSingleLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/greyish_brown_two"
            android:layout_marginStart="15dp"
            android:ellipsize="middle"
            android:textSize="@dimen/text_13"
            app:selectedCouponNumber="@{couponWallet.couponNumber}"
            app:selectedCouponMap="@{viewModel.mSelectedCouponInfo}"
            app:selectedDealId="@{dealId}"
            app:vmCouponNumber="@{viewModel.mSelectedCoupon.couponNumber}"
            app:vmDealId="@{viewModel.mSelectedDealId}" />
        <!--android:textColor="@{dealId != viewModel.mSelectedProduct.dealId &amp;&amp; viewModel.mSelectedCoupon.couponId > -1 &amp;&amp; viewModel.mSelectedCoupon.couponId == couponWallet.couponId ? @color/pinkish_grey : @color/greyish_brown_two, default = @color/greyish_brown_two}"-->
    </LinearLayout>
</layout>