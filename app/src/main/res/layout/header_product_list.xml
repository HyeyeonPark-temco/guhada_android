<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="order"
            type="String" />

        <variable
            name="clickListener"
            type="android.view.View.OnClickListener" />
    </data>

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- TAB -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_header">

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/layout_tab"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipToPadding="false"
                    android:overScrollMode="never"
                    app:tabContentStart="0dp"
                    app:tabIndicator="@null"
                    app:tabIndicatorHeight="0dp"
                    app:tabMinWidth="0dp"
                    app:tabMode="scrollable"
                    app:tabPaddingBottom="0dp"
                    app:tabPaddingEnd="10dp"
                    app:tabPaddingStart="10dp"
                    app:tabPaddingTop="0dp" />

                <!-- LEFT -->
                <LinearLayout
                    android:id="@+id/layout_tab_left_direction"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:background="@color/common_black" />

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="match_parent"
                        android:background="@color/common_blue_purple" />
                </LinearLayout>

                <!-- RIGHT -->
                <LinearLayout
                    android:id="@+id/layout_tab_right_direction"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="match_parent"
                        android:background="@color/common_blue_purple" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:background="@color/common_black" />
                </LinearLayout>
            </RelativeLayout>

            <!-- LINE -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line_2" />

            <!-- OPTION -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_header">

                <!-- LEFT -->
                <LinearLayout
                    android:id="@+id/layout_order"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:onClick="@{clickListener}"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/TextRegular"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="@{order}"
                        android:textColor="@color/text_1"
                        android:textSize="@dimen/text_15" />

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/list_btn_lineup" />
                </LinearLayout>

                <!-- CENTER -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/image_list_type_2"
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:background="@drawable/selector_list_type_2"
                        android:onClick="@{clickListener}" />

                    <ImageView
                        android:id="@+id/image_list_type_1"
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:background="@drawable/selector_list_type_1"
                        android:onClick="@{clickListener}" />

                    <ImageView
                        android:id="@+id/image_list_type_3"
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:background="@drawable/selector_list_type_3"
                        android:onClick="@{clickListener}" />
                </LinearLayout>

                <!-- RIGHT -->
                <LinearLayout
                    android:id="@+id/layout_search_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:gravity="center_vertical"
                    android:onClick="@{clickListener}"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/TextRegular"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="@string/product_search_detail_title"
                        android:textColor="@color/text_1"
                        android:textSize="@dimen/text_15" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="14dp"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/list_icon_fillter" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>
</layout>