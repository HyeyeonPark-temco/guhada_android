<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="clickListener"
            type="android.view.View.OnClickListener" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- TOP MENU -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_header"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- LEFT -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_header"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image_side_menu"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/top_btn_menu"
                    android:onClick="@{clickListener}" />

            </LinearLayout>

            <TextView
                style="@style/TextMedium"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_header"
                android:layout_centerInParent="true"
                android:gravity="center_vertical"
                android:text="@string/common_community"
                android:textColor="@color/black_four"
                android:textSize="17sp" />

            <!-- RIGHT -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_header"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image_search"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/top_btn_search"
                    android:onClick="@{clickListener}" />

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp">

                    <ImageView
                        android:id="@+id/image_shop_cart"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/top_btn_bag"
                        android:onClick="@{clickListener}" />

                    <TextView
                        android:id="@+id/textview_badge"
                        style="@style/TextMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|top"
                        android:background="@drawable/badge"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="@color/common_white"
                        android:textSize="@dimen/text_9" />

                </FrameLayout>

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</layout>