<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="io.temco.guhada.data.viewmodel.EditShippingAddressViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/common_white"
        android:paddingLeft="20dp"
        android:paddingTop="30dp"
        android:paddingRight="20dp"
        android:paddingBottom="30dp">

        <TextView
            style="@style/TextBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/editshippingaddress_title"
            android:textColor="@color/black_four"
            android:textSize="@dimen/text_16"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/imagebutton_editshippingaddress_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{()->viewModel.onClickCancel()}"
            android:src="@drawable/btn_pop_close"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view_editshippingaddress_line"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginTop="15dp"
            android:background="@color/black_four"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imagebutton_editshippingaddress_close" />

        <io.temco.guhada.view.custom.BorderEditTextView
            android:id="@+id/edittext_editshippingaddress_addressname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            app:hint="@string/editshippingaddress_hint_addressname"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_editshippingaddress_line"
            app:txt="@{viewModel.shippingAddress.shippingName}" />

        <io.temco.guhada.view.custom.BorderEditTextView
            android:id="@+id/edittext_editshippingaddress_zip"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:hint="@string/editshippingaddress_hint_zip"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/button_editshippingaddress_zip"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edittext_editshippingaddress_addressname"
            app:txt="@{viewModel.shippingAddress.zip}" />

        <Button
            android:id="@+id/button_editshippingaddress_zip"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/border_all_whitethree"
            android:text="@string/editshippingaddress_button_zip"
            android:textColor="@color/black_four"
            android:textSize="@dimen/text_13"
            app:layout_constraintLeft_toRightOf="@+id/edittext_editshippingaddress_zip"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edittext_editshippingaddress_addressname" />

        <io.temco.guhada.view.custom.BorderEditTextView
            android:id="@+id/edittext_editshippingaddress_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:hint="@string/editshippingaddress_hint_address"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edittext_editshippingaddress_zip"
            app:txt="@{viewModel.shippingAddress.address}" />

        <io.temco.guhada.view.custom.BorderEditTextView
            android:id="@+id/edittext_editshippingaddress_detailaddress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:hint="@string/editshippingaddress_hint_detailaddress"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edittext_editshippingaddress_address"
            app:txt="@{viewModel.shippingAddress.detailAddress}" />

        <io.temco.guhada.view.custom.BorderEditTextView
            android:id="@+id/edittext_editshippingaddress_recipientname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:hint="@string/editshippingaddress_hint_recipientname"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edittext_editshippingaddress_detailaddress"
            app:txt="@{viewModel.shippingAddress.recipientName}" />

        <io.temco.guhada.view.custom.BorderEditTextView
            android:id="@+id/edittext_editshippingaddress_recipientmobile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:hint="@string/editshippingaddress_hint_recipientmobile"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edittext_editshippingaddress_recipientname"
            app:txt="@{viewModel.shippingAddress.recipientMobile}" />

        <CheckBox
            android:id="@+id/checkbox_editshippingaddress_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/selector_checkbox_all"
            android:button="@null"
            android:checked="@{viewModel.shippingAddress.defaultAddress}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edittext_editshippingaddress_recipientmobile" />

        <TextView
            style="@style/TextMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="12dp"
            android:text="@string/editshippingaddress_set_default"
            android:textColor="@color/greyish_brown_two"
            android:textSize="@dimen/text_14"
            app:layout_constraintLeft_toRightOf="@+id/checkbox_editshippingaddress_default"
            app:layout_constraintTop_toBottomOf="@+id/edittext_editshippingaddress_recipientmobile" />

        <Button
            android:id="@+id/button_editshippingaddress_cancel"
            style="@style/TextMedium"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:background="@color/greyish_brown_two"
            android:onClick="@{()->viewModel.onClickCancel()}"
            android:text="@string/editshippingaddress_button_cancel"
            android:textColor="@color/common_white"
            android:textSize="@dimen/text_13"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/button_editshippingaddress_submit"
            app:layout_constraintTop_toBottomOf="@+id/checkbox_editshippingaddress_default" />

        <Button
            android:id="@+id/button_editshippingaddress_submit"
            style="@style/TextMedium"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginStart="6dp"
            android:layout_marginTop="20dp"
            android:background="@color/common_blue_purple"
            android:onClick="@{()->viewModel.onClickSubmit()}"
            android:text="@string/editshippingaddress_button_submit"
            android:textColor="@color/common_white"
            android:textSize="@dimen/text_13"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@+id/button_editshippingaddress_cancel"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/checkbox_editshippingaddress_default" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>