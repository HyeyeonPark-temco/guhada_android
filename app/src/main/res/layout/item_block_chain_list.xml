<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- SERIAL -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_weight="0"
                    android:background="@drawable/icon_check" />

                <TextView
                    style="@style/TextBold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_weight="1"
                    android:text="@string/blockchain_title_serial_id"
                    android:textColor="@color/text_3"
                    android:textSize="@dimen/text_13" />

                <!-- NUMBER -->
                <TextView
                    android:id="@+id/text_number"
                    style="@style/TextBold"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_weight="0"
                    android:background="@drawable/background_blockchain_number"
                    android:gravity="center"
                    android:textColor="@color/common_blue_purple"
                    android:textSize="@dimen/text_10" />
            </LinearLayout>

            <TextView
                android:id="@+id/text_serial_id"
                style="@style/TextRegular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="34dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/text_3"
                android:textSize="@dimen/text_12" />
        </LinearLayout>

        <!-- BRAND -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_weight="0"
                    android:background="@drawable/icon_check" />

                <TextView
                    style="@style/TextBold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_weight="1"
                    android:text="@string/blockchain_title_brand"
                    android:textColor="@color/text_3"
                    android:textSize="@dimen/text_13" />
            </LinearLayout>

            <TextView
                android:id="@+id/text_brand"
                style="@style/TextRegular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="34dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/text_3"
                android:textSize="@dimen/text_12" />
        </LinearLayout>

        <!-- SELLER -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_weight="0"
                    android:background="@drawable/icon_check" />

                <TextView
                    style="@style/TextBold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_weight="1"
                    android:text="@string/blockchain_title_seller"
                    android:textColor="@color/text_3"
                    android:textSize="@dimen/text_13" />
            </LinearLayout>

            <TextView
                android:id="@+id/text_seller"
                style="@style/TextRegular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="34dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/text_3"
                android:textSize="@dimen/text_12" />
        </LinearLayout>

        <!-- PRODUCT -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_weight="0"
                    android:background="@drawable/icon_check" />

                <TextView
                    style="@style/TextBold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_weight="1"
                    android:text="@string/blockchain_title_product"
                    android:textColor="@color/text_3"
                    android:textSize="@dimen/text_13" />
            </LinearLayout>

            <TextView
                android:id="@+id/text_product"
                style="@style/TextRegular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="34dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/text_3"
                android:textSize="@dimen/text_12" />
        </LinearLayout>

        <!-- PRICE -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_weight="0"
                    android:background="@drawable/icon_check" />

                <TextView
                    style="@style/TextBold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_weight="1"
                    android:text="@string/blockchain_title_price"
                    android:textColor="@color/text_3"
                    android:textSize="@dimen/text_13" />
            </LinearLayout>

            <TextView
                android:id="@+id/text_price"
                style="@style/TextRegular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="34dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/text_3"
                android:textSize="@dimen/text_12" />
        </LinearLayout>

        <!-- COLOR -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_weight="0"
                    android:background="@drawable/icon_check" />

                <TextView
                    style="@style/TextBold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_weight="1"
                    android:text="@string/blockchain_title_color"
                    android:textColor="@color/text_3"
                    android:textSize="@dimen/text_13" />
            </LinearLayout>

            <TextView
                android:id="@+id/text_color"
                style="@style/TextRegular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="34dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/text_3"
                android:textSize="@dimen/text_12" />
        </LinearLayout>

        <!-- CERTIFICATE -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_weight="0"
                    android:background="@drawable/icon_check" />

                <TextView
                    style="@style/TextBold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_weight="1"
                    android:text="@string/blockchain_title_certificate"
                    android:textColor="@color/text_3"
                    android:textSize="@dimen/text_13" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="34dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_certificate"
                    style="@style/TextRegular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_3"
                    android:textSize="@dimen/text_12" />

                <ImageView
                    android:layout_width="17dp"
                    android:layout_height="21dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/iconfinder_file_expand_pdf_1379078" />
            </LinearLayout>
        </LinearLayout>

        <!-- TRACKER -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:paddingBottom="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_weight="0"
                    android:background="@drawable/icon_check" />

                <TextView
                    style="@style/TextBold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_weight="1"
                    android:text="@string/blockchain_title_tracker"
                    android:textColor="@color/text_3"
                    android:textSize="@dimen/text_13" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="34dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/blockchain_title_tracker_link"
                    android:textColor="@color/common_blue_purple"
                    android:textSize="@dimen/text_12" />

                <ImageView
                    android:id="@+id/image_link"
                    android:layout_width="19dp"
                    android:layout_height="21dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/icon_block_chain_link" />
            </LinearLayout>
        </LinearLayout>

        <!-- DOT LINE -->
        <ImageView
            android:id="@+id/image_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="30dp"
            android:layerType="software"
            android:src="@drawable/line_dot_blockchain" />
    </LinearLayout>
</layout>