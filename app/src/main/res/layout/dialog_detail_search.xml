<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="clickShipInfoListener"
            type="android.view.View.OnClickListener" />
        <variable
            name="clickPdtCdtInfoListener"
            type="android.view.View.OnClickListener" />
        <variable
            name="clickListener"
            type="android.view.View.OnClickListener" />
        <variable
            name="viewModel"
            type="io.temco.guhada.data.viewmodel.DetailSearchDialogViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <!-- HEADER -->
        <include
            layout="@layout/header_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            app:clickListener="@{clickListener}"
            app:title="@{@string/product_search_detail_title}" />

        <!-- CONTENTS -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <androidx.core.widget.NestedScrollView
                android:id="@+id/view_scroll_contents"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/background_default"
                android:overScrollMode="never"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- //////////////////////////////////////////////// -->
                    <!-- CATEGORY -->
                    <!-- //////////////////////////////////////////////// -->

                    <com.github.florent37.expansionpanel.ExpansionHeader
                        android:id="@+id/layout_expand_category_header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:expansion_layout="@id/layout_expand_category_contents"
                        app:expansion_toggleOnClick="true">

                        <include
                            android:id="@+id/layout_header_category"
                            layout="@layout/layout_detail_search_title"
                            app:title="@{@string/common_category}" />
                    </com.github.florent37.expansionpanel.ExpansionHeader>

                    <com.github.florent37.expansionpanel.ExpansionLayout
                        android:id="@+id/layout_expand_category_contents"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:expansion_expanded="false">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/list_category"
                            android:layout_width="match_parent"
                            android:layout_height="300dp"
                            android:overScrollMode="never" />
                    </com.github.florent37.expansionpanel.ExpansionLayout>

                    <!-- //////////////////////////////////////////////// -->
                    <!-- BRAND -->
                    <!-- //////////////////////////////////////////////// -->

                    <com.github.florent37.expansionpanel.ExpansionHeader
                        android:id="@+id/layout_expand_brand_header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:expansion_layout="@id/layout_expand_brand_contents"
                        app:expansion_toggleOnClick="true">

                        <include
                            android:id="@+id/layout_header_brand"
                            layout="@layout/layout_detail_search_title"
                            app:title="@{@string/common_brand}" />
                    </com.github.florent37.expansionpanel.ExpansionHeader>

                    <com.github.florent37.expansionpanel.ExpansionLayout
                        android:id="@+id/layout_expand_brand_contents"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:expansion_expanded="false">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <include
                                android:id="@+id/layout_search"
                                layout="@layout/layout_brand_search" />

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/list_brand"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:overScrollMode="never"
                                android:paddingRight="20dp" />
                        </LinearLayout>
                    </com.github.florent37.expansionpanel.ExpansionLayout>


                    <!-- //////////////////////////////////////////////// -->
                    <!-- Shipping info -->
                    <!-- //////////////////////////////////////////////// -->


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:orientation="vertical">

                        <TextView
                            style="@style/TextMedium"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginLeft="20dp"
                            android:gravity="center_vertical"
                            android:text="배송정보"
                            android:textColor="@color/text_3"
                            android:textSize="@dimen/text_14"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="38dp"
                            android:layout_marginLeft="10dp"
                            android:weightSum="2"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/list_shipinfo1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:onClick="@{clickShipInfoListener}"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:paddingLeft="20dp">

                                <!-- FAVORITE -->
                                <ImageView
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:background="@{viewModel.detailSearchDialogShipInfo1 ? @drawable/filter_checkbox_selected : @drawable/filter_checkbox_inactive , default=@drawable/filter_checkbox_inactive}" />

                                <!-- TITLE -->
                                <TextView
                                    style="@style/TextMediumSingleLine"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="13dp"
                                    android:text="해외배송"
                                    android:textColor="@{viewModel.detailSearchDialogShipInfo1 ? @color/common_blue_purple : @color/text_3 , default=@color/text_3}"
                                    android:textSize="@dimen/text_14" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/list_shipinfo2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:onClick="@{clickShipInfoListener}"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <!-- FAVORITE -->
                                <ImageView
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:background="@{viewModel.detailSearchDialogShipInfo2 ? @drawable/filter_checkbox_selected : @drawable/filter_checkbox_inactive , default=@drawable/filter_checkbox_inactive}" />

                                <!-- TITLE -->
                                <TextView
                                    style="@style/TextMediumSingleLine"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="13dp"
                                    android:text="국내배송"
                                    android:textColor="@{viewModel.detailSearchDialogShipInfo2 ? @color/common_blue_purple : @color/text_3 , default=@color/text_3}"
                                    android:textSize="@dimen/text_14" />
                            </LinearLayout>
                        </LinearLayout>

                        <!-- DOT LINE -->
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="10dp"
                            android:layerType="software"
                            android:src="@drawable/line_dot" />

                    </LinearLayout>

                    <!-- //////////////////////////////////////////////// -->


                    <!-- //////////////////////////////////////////////// -->
                    <!-- Product Condition info -->
                    <!-- //////////////////////////////////////////////// -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:orientation="vertical">

                        <TextView
                            style="@style/TextMedium"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginLeft="20dp"
                            android:gravity="center_vertical"
                            android:text="제품상태"
                            android:textColor="@color/text_3"
                            android:textSize="@dimen/text_14"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="38dp"
                            android:layout_marginLeft="10dp"
                            android:weightSum="2"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/list_pdtCdtinfo1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:onClick="@{clickPdtCdtInfoListener}"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:paddingLeft="20dp">

                                <!-- FAVORITE -->
                                <ImageView
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:background="@{viewModel.detailSearchDialogPdtCdt1 ? @drawable/filter_checkbox_selected : @drawable/filter_checkbox_inactive , default=@drawable/filter_checkbox_inactive}" />

                                <!-- TITLE -->
                                <TextView
                                    style="@style/TextMediumSingleLine"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="13dp"
                                    android:text="새제품"
                                    android:textColor="@{viewModel.detailSearchDialogPdtCdt1 ? @color/common_blue_purple : @color/text_3 , default=@color/text_3}"
                                    android:textSize="@dimen/text_14" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/list_pdtCdtinfo2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:onClick="@{clickPdtCdtInfoListener}"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <!-- FAVORITE -->
                                <ImageView
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:background="@{viewModel.detailSearchDialogPdtCdt2 ? @drawable/filter_checkbox_selected : @drawable/filter_checkbox_inactive , default=@drawable/filter_checkbox_inactive}" />

                                <!-- TITLE -->
                                <TextView
                                    style="@style/TextMediumSingleLine"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="13dp"
                                    android:text="빈티지"
                                    android:textColor="@{viewModel.detailSearchDialogPdtCdt2 ? @color/common_blue_purple : @color/text_3 , default=@color/text_3}"
                                    android:textSize="@dimen/text_14" />
                            </LinearLayout>
                        </LinearLayout>

                        <!-- DOT LINE -->
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="10dp"
                            android:layerType="software"
                            android:src="@drawable/line_dot" />

                    </LinearLayout>

                    <!-- //////////////////////////////////////////////// -->

                    <!-- //////////////////////////////////////////////// -->
                    <!-- FILTER -->
                    <!-- //////////////////////////////////////////////// -->

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/list_filter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:overScrollMode="never" />

                    <!-- //////////////////////////////////////////////// -->
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>

            <!-- PROGRESS -->
            <RelativeLayout
                android:id="@+id/layout_progress"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/background_dim">

                <!--<ProgressBar-->
                <!--android:layout_width="40dp"-->
                <!--android:layout_height="40dp"-->
                <!--android:layout_centerInParent="true" />-->
            </RelativeLayout>
        </RelativeLayout>

        <!-- BUTTON -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="0"
            android:orientation="horizontal"
            android:weightSum="3">

            <!-- RESET -->
            <RelativeLayout
                android:id="@+id/layout_reset"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/background_2"
                android:onClick="@{clickListener}"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:background="@drawable/filter_icon_reset_w" />

                    <TextView
                        style="@style/TextMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/common_reset"
                        android:textColor="@color/common_white"
                        android:textSize="@dimen/text_13" />
                </LinearLayout>
            </RelativeLayout>

            <!-- RESULT -->
            <TextView
                android:id="@+id/text_result"
                style="@style/TextMedium"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@color/common_blue_purple"
                android:gravity="center"
                android:onClick="@{clickListener}"
                android:text="@string/detail_search_result"
                android:textColor="@color/common_white"
                android:textSize="@dimen/text_13" />
        </LinearLayout>
    </LinearLayout>
</layout>